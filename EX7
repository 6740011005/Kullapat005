            display: flex;
            flex-direction: column;
            align-items: center;
        }

        h1 {
            color: #333;
        }

        #status-message {
            margin: 20px;
            font-weight: bold;
            color: #666;
        }

        .error-text {
            color: #d9534f !important;
            background: #f8d7da;
            padding: 10px;
            border-radius: 5px;
        }

        /* Container สำหรับจัดการ Layout ของการ์ด */
        #user-list-container {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
            gap: 20px;
            width: 100%;
            max-width: 1000px;
        }

        /* สไตล์ของการ์ดผู้ใช้แต่ละคน */
        .user-card {
            background: white;
            border-radius: 8px;
